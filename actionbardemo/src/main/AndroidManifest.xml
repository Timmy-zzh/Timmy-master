<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timmy.actionbar">

    <application
        android:name=".TimmyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/CustomActionBarTheme">
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.SecondActivity"
            android:label="ActionBar遮罩效果"
            android:parentActivityName=".ui.activity.MainActivity"
            android:theme="@style/OverlayTheme" />
        <activity
            android:name=".ui.activity.TabActivity"
            android:parentActivityName=".ui.activity.SecondActivity"
            android:theme="@style/TabTheme" />
        <activity
            android:name=".ui.activity.FragmentsActivity"
            android:label="Fragment交互"
            android:parentActivityName=".ui.activity.MainActivity" />
    </application>

</manifest>