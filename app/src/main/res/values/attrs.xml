<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--自定义公共属性-->
    <attr name="titleSize" format="dimension" />
    <attr name="titleText" format="string" />
    <attr name="titleColor" format="color" />
    <attr name="outCircleColor" format="color" />
    <attr name="inCircleColor" format="color" />
    <attr name="lineColor" format="color" />
    <attr name="image" format="reference" />
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />

    <!--图片缩放类型-->
    <attr name="imageScaleType">
        <enum name="fitXY" value="0" />
        <enum name="center" value="1" />
    </attr>

    <!--自定义view的属性-->
    <declare-styleable name="TimmyHealthView">
        <attr name="titleColor"></attr>
        <attr name="lineColor"></attr>
    </declare-styleable>

    <!--自定义开关按钮,定义三个属性,背景图片,滑动按钮图片,当前开关的状态-->
    <declare-styleable name="MyToggleButton">
        <attr name="current_state" format="boolean" />
        <attr name="background_bitmap" format="reference" />
        <attr name="slide_button" format="reference" />
    </declare-styleable>

    <!--验证码自定义属性-->
    <declare-styleable name="VerificaCodeView">
        <attr name="titleText" />
        <attr name="titleColor" />
        <attr name="titleSize" />
    </declare-styleable>

    <!--带文字的图片-->
    <declare-styleable name="TextImageView">
        <attr name="titleText" />
        <attr name="titleSize" />
        <attr name="titleColor" />
        <attr name="image" />
        <attr name="imageScaleType" />
    </declare-styleable>

    <!--圆环自定义属性-->
    <declare-styleable name="RingView">
        <!--圆环的第一,第二个颜色-->
        <attr name="firstColor" />
        <attr name="secondColor" />
        <!--圆环的宽度-->
        <attr name="circleWidth" format="dimension" />
        <!--圆环变化的速度-->
        <attr name="speed" format="integer" />
    </declare-styleable>

    <!--音量控件自定义属性-->
    <declare-styleable name="VolumeView">
        <attr name="firstColor" />
        <attr name="secondColor" />
        <!--间隔多少度-->
        <attr name="interval" format="integer" />
        <!--圆环宽度-->
        <attr name="ringWidth" format="dimension" />
        <!--音量中点的个数-->
        <attr name="pointCount" format="integer" />
        <!--中间的音量图标?????图片适配时,系统是根据什么来决定拿哪种分辨率的图片-->
        <attr name="image" />
    </declare-styleable>

    <!--圆角图片-->
    <declare-styleable name="CustomImageView">
        <!--图片类型-->
        <attr name="imageType">
            <enum name="normal" value="0" />
            <enum name="circle" value="1" />
            <enum name="round" value="2" />
        </attr>
        <attr name="roundRadius" format="dimension" />
        <attr name="image" />
    </declare-styleable>

    <attr name="position" format="integer">
        <enum name="left_top" value="0" />
        <enum name="right_top" value="1" />
        <enum name="right_bottom" value="2" />
        <enum name="left_bottom" value="3" />
    </attr>
    <attr name="arcRadius" format="dimension" />
    <!--圆形菜单控件-->
    <declare-styleable name="ArcMenu">
        <attr name="position" />
        <attr name="arcRadius" />
    </declare-styleable>


    <declare-styleable name="ArcMenu01">
        <attr name="position" />
        <attr name="arcRadius" />
    </declare-styleable>

    <!--手势应用锁-->
    <declare-styleable name="GestureLockViewGroup">
        <attr name="noFingerOutterColor" format="color" />
        <attr name="noFingerInnerColor" format="color" />
        <attr name="fingerOnColor" format="color" />
        <attr name="fingerUpColor" format="color" />
        <attr name="rawCount" format="integer" />
        <attr name="tryTime" format="integer" />
    </declare-styleable>

    <!--流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="verticalMargin" format="dimension" />
        <attr name="horizontalMargin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="bg_color" format="color" />
    </declare-styleable>

    <!--SVG自定义控件属性-->
    <declare-styleable name="PathView">
        <attr name="pathColor" format="color|reference"/>
        <attr name="pathWidth" format="dimension|reference"/>
        <attr name="svg" format="reference"/>
        <attr name="fill" format="boolean"/>
        <attr name="fillColor" format="color|reference"/>
        <attr name="naturalColors" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LoadingLayout">
        <attr name="loadingView" format="reference" />
        <attr name="stateView" format="reference" />
        <attr name="emptyView" format="reference" />
    </declare-styleable>
    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

</resources>
