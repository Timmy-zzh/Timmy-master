<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--action bar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--window background-->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- toolbar title color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--window background-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--listview或者recyclerview的item的分割线样式-->
        <!--<item name="android:listDivider">@drawable/item_divide_decora</item>-->
        <!--inputlayout出现错误时控件的样式设置-->
        <item name="textColorError">@color/design_textinput_error_color_light</item>
    </style>

    <!--普通应用主题-->
    <style name="AppTheme" parent="AppTheme.Base" />


    <!--Toolbar-->
    <style name="AppToolbarTheme" parent="ToolbarTheme.Base" />

    <style name="ToolbarTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <!--Toolbar的主题 ThemeOverlay.AppCompat.ActionBar-->
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextColor">@color/blue_light</item>
        <item name="android:actionMenuTextAppearance">@style/ToolbarMenuTextSize</item>
    </style>

    <style name="ToolbarMenuTextSize" parent="Base.TextAppearance.AppCompat.Menu">
        <item name="android:textSize">12sp</item>
    </style>

    <!--设置toolbar的menu菜单弹窗的主题 Base.Theme.AppCompat.Light Theme.AppCompat.Light -->
    <style name="ToolbarPopupTheme" parent="Theme.AppCompat">
        <!--设置背景色为灰色-->
        <item name="android:colorBackground">@color/Gray_e</item>
        <!--menu菜单的文字颜色设置-->
        <item name="android:textColorPrimary">@color/c_xiuxiu</item>
        <!--菜单文字的大小-->
        <item name="android:textSize">12sp</item>
    </style>

    <!--Toolbar标题文字的样式,包括文字颜色大小等-->
    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!--界面底部弹出Dialog-->
    <style name="BottomSelectDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--界面地图弹出Dialog动画设置-->
    <style name="BottomSelectDialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#aae0e0e0</item>
    </style>


    <!--Activity启动和销毁的界面动画效果-淡入淡出-->
    <style name="fade" parent="Animation.AppCompat.Dialog">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyDialogTopRight" parent="@style/AppTheme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>

    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:background">@mipmap/img_beauti</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>
