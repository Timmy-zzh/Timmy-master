<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--action bar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--window background-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--toolbar text color-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--toolbar menu text color-->
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <!--window background-->
        <item name="android:windowBackground">@android:color/white</item>
        <!--<item name="android:listDivider">@drawable/item_divide_decora</item>-->
    </style>

    <!--普通应用主题-->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="drawerArrowStyle">@style/AppTheme.TimmyDrawerArrowStyle</item>

    </style>


    <style name="ToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/Black</item>

    </style>

    <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">@color/Black</item>
    </style>

    <style name="AppTheme.TimmyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!--Toolbar标题文字大小-->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--界面底部弹出Dialog-->
    <style name="BottomSelectDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--界面地图弹出Dialog动画设置-->
    <style name="BottomSelectDialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>


    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#aae0e0e0</item>
    </style>


    <!--Activity启动和销毁的界面动画效果-淡入淡出-->
    <style name="fade" parent="Animation.AppCompat.Dialog">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_bottom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyDialogTopRight" parent="@style/AppTheme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>

    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:background">@mipmap/img_beauti</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>



</resources>
