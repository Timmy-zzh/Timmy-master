<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <!--没有actionBar和标题&ndash;&gt;使用ToolBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--action bar color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--window background-->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--普通应用主题-->
    <style name="AppTheme" parent="AppTheme.Base">

        <item name="actionBarStyle">@style/TimmyActionBarStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.TimmyDrawerArrowStyle</item>
        <!--actionbar text color-->
        <item name="android:textColorPrimary">@color/actionbar_title</item>
    </style>


    <!--设置标题栏样式-->
    <style name="TimmyActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <!-- 标题栏文字样式 -->
    <style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="AppTheme.TimmyDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="actionbar_title">#ffffff</color>
    <color name="primary_text">#212121</color>
</resources>
