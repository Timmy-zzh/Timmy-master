<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.timmy.advance.customViewGroup.ArcMenu01
            android:id="@+id/arc_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arcRadius="100dp"
            app:position="left_top">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/composer_button">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/composer_icn_plus" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_camera"
                android:tag="Camera" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_music"
                android:tag="Music" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_sleep"
                android:tag="Sleep" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_sun"
                android:tag="Sun" />

        </com.timmy.advance.customViewGroup.ArcMenu01>

        <com.timmy.advance.customViewGroup.ArcMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arcRadius="100dp"
            app:position="right_top">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/composer_button">

                <ImageView
                    android:id="@+id/iv_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/composer_icn_plus" />

            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_camera"
                android:tag="Camera" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_music"
                android:tag="Music" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_sleep"
                android:tag="Sleep" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/composer_sun"
                android:tag="Sun" />

        </com.timmy.advance.customViewGroup.ArcMenu>
    </RelativeLayout>

</LinearLayout>
