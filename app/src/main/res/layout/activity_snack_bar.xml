<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/common_toolbar" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="123"
            android:textColor="@color/Black"
            android:background="@color/Gray_e"
            android:layout_marginTop="10dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btn_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="toastClick"
            android:text="自定义Toast"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_snackbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="snackClick"
            android:text="SnackBar"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/btn_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dialogClick"
            android:text="Dialog"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_handler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="handlerClick"
            android:text="Handler机制"
            android:textAllCaps="false" />

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/fabtn"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="bottom|right"
        android:onClick="FloatActBtnClick"
        android:layout_margin="16dp"
        android:layout_height="wrap_content" />

</android.support.design.widget.CoordinatorLayout>
