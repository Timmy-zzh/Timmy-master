<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <com.timmy.advance.customView.TextImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="fitXY"
        app:titleText="图片一名称"
        app:titleColor="@color/blue_light"
        app:titleSize="20sp" />


    <com.timmy.advance.customView.TextImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleText="是分公司公司发给很讨厌"
        app:titleColor="@color/blue_light"
        app:titleSize="20sp" />

    <com.timmy.advance.customView.TextImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_launcher"
        app:imageScaleType="center"
        app:titleText="图片一名称啦减肥啦的空间垃圾啊来看"
        app:titleColor="@color/blue_light"
        app:titleSize="20sp" />


    <com.timmy.advance.customView.TextImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        app:image="@mipmap/ic_14"
        app:imageScaleType="center"
        app:titleText="美女"
        app:titleColor="@color/blue_light"
        app:titleSize="20sp" />
</LinearLayout>
