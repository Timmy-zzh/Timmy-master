<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timmy">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TimmyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.TechnologyPointActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Android技术点"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.AutoPlayPicturesActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="自动轮播图"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.CameraPictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_camera_picture"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.AnimationActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_animation"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.GlideImageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Glide"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.ClipToOutlineActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="setClipToOutline"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.DialogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Dialog"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.AboutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="关于"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.TimmyHealthActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="自定义View"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.RecycleHeaderViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="RecycleHeaderViewActivity"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.ToolBarActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="ToolBarActivity"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.technologypoint.CoordinatorLayoutActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="CoordinatorLayoutActivity"
            android:parentActivityName=".ui.TechnologyPointActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".advance.AdvanceActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="鸿神进阶之路"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".advance.slideList.FollowSlideListActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="高仿腾讯ListView滑动删除"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".advance.dialog.DialogActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyDialogTopRight" />
        <activity
            android:name=".advance.win8metro.FollowWin8Activity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="高仿Win8效果点击界面"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".advance.viewpagerIndicator.ViewPagerIndicatiorActivity" />
        <activity
            android:name=".advance.scrollVertical.VerticalScrollActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Android自定义ViewGroup实现竖向引导界面"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".advance.customView.MyToggleButtonActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="自定义View(一)开关按钮"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".advance.waterRipple.WaterRippleActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="定义View(二)水波纹效果"
            android:parentActivityName=".advance.AdvanceActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".advance.customViewGroup.CustomViewPagerActivity" />
        <activity android:name=".advance.screenAdapter.ImageAdapterActivity"></activity>
    </application>

</manifest>